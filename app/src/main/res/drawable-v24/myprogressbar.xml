<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">

        <shape>



            <gradient android:startColor="#DBDBDB" android:centerColor="#DBDBDB"

                android:centerY="0.75" android:endColor="#DBDBDB" android:angle="90" />



        </shape>

    </item>

    <item android:id="@android:id/progress">

        <clip>

            <shape>



                <gradient android:startColor="#B90C0C" android:endColor="#B90C0C"

                    android:angle="90" />



            </shape>

        </clip>

    </item>

</layer-list>